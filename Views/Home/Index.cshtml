@{
    ViewData["Title"] = "Home Page";
}
@functions {
    public string CapitalizeFirst(string? text)
    {
        if (string.IsNullOrWhiteSpace(text))
            return "";
        return char.ToUpper(text[0]) + text.Substring(1);
    }
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm p-5">
        <div class="card-body">
            <h1 class="display-4 mb-3 text-center">Welcome, @CapitalizeFirst(User?.Identity?.Name ?? "Guest")!</h1>
            <p class="text-center">Glad to have you back. Explore the menu to manage your products and categories.</p>
        </div>
    </div>
</div>
