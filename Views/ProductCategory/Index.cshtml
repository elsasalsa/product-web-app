@model List<ProductManagementApp.Models.ProductCategory>

@{
    ViewData["Title"] = "Product Categories";
    var deletedCategories = ViewData["DeletedCategories"] as List<ProductManagementApp.Models.ProductCategory>;
}

<h2 class="mb-5 mt-5">Product Categories</h2>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-end align-items-center">
        <a class="btn btn-sm btn-primary" asp-action="Create">+ Add Category</a>
        @* <button type="button" class="btn btn-sm btn-danger ms-2" data-bs-toggle="modal"
            data-bs-target="#deletedCategoriesModal">
            Deleted Categories
        </button> *@
    </div>

    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No categories found.</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].CategoryName</td>
                            <td>
                                <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a>
                                <form asp-action="Delete" asp-route-id="@Model[i].Id" method="post" class="d-inline"
                                    onsubmit="return confirm('Are you sure to delete this category?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<!-- Modal Deleted Categories -->
<div class="modal fade" id="deletedCategoriesModal" tabindex="-1" aria-labelledby="deletedCategoriesModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletedCategoriesModalLabel">Deleted Categories</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (deletedCategories == null || deletedCategories.Count == 0)
                {
                    <p class="text-muted text-center">No deleted categories found.</p>
                }
                else
                {
                    <table class="table table-bordered table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < deletedCategories.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@deletedCategories[i].CategoryName</td>
                                    <td>
                                        <form asp-action="Restore" asp-route-id="@deletedCategories[i].Id" method="post"
                                            class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success me-1">Restore</button>
                                        </form>
                                        <form asp-action="PermanentDelete" asp-route-id="@deletedCategories[i].Id" method="post"
                                            class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to permanently delete this category?')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

