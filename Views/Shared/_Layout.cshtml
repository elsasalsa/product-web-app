@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prodify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductManagementApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar bg-primary text-white py-4" id="sidebar">
                <div class="position-sticky">
                    <div class="d-flex justify-content-between align-items-center px-3 mb-4">
                        <h4 class="fw-bold mb-8">Prodify</h4>
                        <button class="btn btn-light d-md-none toggle-btn" id="closeSidebar">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>

                    <!-- Menu List -->
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white d-flex align-items-center" asp-controller="Home"
                                asp-action="Index">
                                <i class="bi bi-grid me-3"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white d-flex align-items-center" asp-controller="ProductCategory"
                                asp-action="Index">
                                <i class="bi bi-tags me-3"></i> Category
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white d-flex align-items-center" asp-controller="Product"
                                asp-action="Index">
                                <i class="bi bi-box-seam me-3"></i> Product
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto px-4 py-4 bg-light min-vh-100 position-relative">
                <button class="btn btn-primary toggle-btn mb-3" id="toggleSidebar">
                    <i class="bi bi-list"></i>
                </button>

                @RenderBody()
            </main>
        </div>
    </div>

    <div class="position-fixed top-0 end-0 mt-3 me-4" style="z-index: 1050;">
        <div class="dropdown">
            <button class="d-flex align-items-center justify-content-center shadow-sm border-0 dropdown-toggle"
                type="button" id="avatarDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="
                    width: 60px;
                    height: 48px;
                    border-radius: 50%;
                    background-color: white;
                    padding: 0;
                ">
                @await Component.InvokeAsync("UserAvatar")
            </button>

            <ul class="dropdown-menu dropdown-menu-end p-3 shadow rounded-4" aria-labelledby="avatarDropdown"
                style="width: 220px;">
                @await Component.InvokeAsync("UserProfile")
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person me-2"></i>Profil</a></li>
                <li>
                    <form method="post" action="/Account/Logout">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - ProductApp - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("sidebar");
            const toggleBtn = document.getElementById("toggleSidebar");
            const closeBtn = document.getElementById("closeSidebar");
            const main = document.querySelector("main");

            toggleBtn?.addEventListener("click", function () {
                sidebar.classList.toggle("show");
                sidebar.classList.toggle("collapsed");

                if (window.innerWidth >= 768) {
                    main.classList.toggle("main-expanded");
                }
            });

            closeBtn?.addEventListener("click", function () {
                sidebar.classList.remove("show");
                sidebar.classList.add("collapsed");

                if (window.innerWidth >= 768) {
                    main.classList.add("main-expanded");
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
