@model ProductManagementApp.Models.User

<li class="text-center mb-2">
    <img src="@(string.IsNullOrEmpty(Model?.ProfilePicture) ? Url.Content("~/image/avatar.png") : Model.ProfilePicture)"
         alt="profile"
         class="mb-2"
         style="width: 50px; height: 50px; border-radius: 50%;" />
    <div class="fw-bold">@((Model?.Name) ?? "Nama Pengguna")</div>
    <div class="text-muted" style="font-size: 0.9em;">@((Model?.Email) ?? "email@example.com")</div>
</li>
